{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@constants": [
        "src/common/constants/index.ts"
      ],
      "@constants/*": [
        "src/common/constants/*"
      ],
      "@utils": [
        "src/common/utils/index.ts"
      ],
      "@utils/*": [
        "src/common/utils/*"
      ],
      "@core/*": [
        "src/core/*"
      ]
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}
